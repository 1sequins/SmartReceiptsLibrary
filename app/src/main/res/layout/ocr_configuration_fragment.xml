<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/default_margin_size"
        android:paddingEnd="@dimen/default_margin_size"
        android:paddingTop="@dimen/default_margin_size"
        android:layout_alignParentTop="true" >

        <TextView style="@style/Widget.SmartReceipts.TextView.Title"
            android:id="@+id/ocr_configuration_scans_remaining"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ocr_configuration_scans_remaining" />

        <TextView style="@style/Widget.SmartReceipts.TextView.Subhead"
            android:id="@+id/ocr_configuration_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ocr_configuration_welcome" />

        <View style="@style/Widget.View.Divider.Horizontal"
            android:layout_marginTop="@dimen/default_margin_size"
            android:layout_marginBottom="@dimen/default_margin_size"/>

        <!-- TODO: Add how this works information -->
        <TextView style="@style/Widget.SmartReceipts.TextView.Title"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="@dimen/default_margin_item_separator"
                  android:text="Information" />

        <View style="@style/Widget.View.Divider.Horizontal"
            android:layout_marginTop="@dimen/default_margin_size"
            android:layout_marginBottom="@dimen/default_margin_size"/>

        <TextView style="@style/Widget.SmartReceipts.TextView.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ocr_configuration_available_purchases" />

    </LinearLayout>

</RelativeLayout>